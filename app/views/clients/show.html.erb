<%= link_to 'Go back', clients_path%> <br>

<h1><%= @client.name %></h1>

<table border="2px solid black">
  <tr>
    <th><%= Client.human_attribute_name(:email) %></th>
    <th><%= Client.human_attribute_name(:phone) %></th>
    <th><%= Client.human_attribute_name(:register_date) %></th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <tr style="text-align:right">
    <td><%= @client.email %></td>
    <td><%= @client.phone %></td>
    <td><%= @client.register_date %></td>
    <td style="text-align:center"><%= link_to 'Edit', edit_client_path(@client) %></td>
    <td style="text-align:center"><%= link_to 'Delete', client_path(@client), method: :delete, data: { confirm: 'Are you sure you want to delete this Client?' } %></td>
   </tr>
</table>